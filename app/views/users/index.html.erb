<h5 class="text-center">All users</h5>


  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Show', user_path(user), class: "btn-info btn-sm mx-2" %>
            <%= link_to 'Edit', edit_user_registration_path(user), class: "btn-warning btn-sm mx-2" %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-danger btn-sm mx-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
